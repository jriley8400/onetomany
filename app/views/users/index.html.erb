<h1>Users</h1>

<p><a href="/new_user">Add a New User</a></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
    <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><button><a href="/users/<%= user.id %>">Show</a></button></td>
          <td><button><a href="/users/<%= user.id %>/edit">Edit</a></button></td>
          <td><button><a href="/users/<%= user.id %>/destroy">Destroy</a></button></td>
    </tr>
  <% end %>
  </tbody>
</table>

